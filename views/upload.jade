extends lzDetails.jade

block content
   h1= subtitle
   section#identify(for='identifyLz')
      form#identifyLz(class='fill' method='post' action='/uploads/upload' enctype='multipart/form-data')
         select#countries(class='inputButton')
            option(value='none') Select your country...
            option(value='bw') Botswana
            option(value='na') Namibia
            option(value='za') South Africa
         br
         label#labelSearchLz(for='searchLz') Which livelihood zone does this spreadsheet apply to?
         input#searchLz(type='search' class='inputText' size='70' placeholder='Type the name, abbreviation or code of your livelihood zone here')
         br
         input#search(type='submit' value='Search' hidden='true')
   sectiom#lzDetails(for='confirmLz' hidden=false)
      form#confirmLz(class='fill' method='post' action='/uploads/confirm' enctype='multipart/form-data')
         label#lzName_label(for='lzName') Livelihood zone's full name:
         input#lzName(type='text' class='inputText' size='80')
         br
         label#lzCode_label(for='lzCode') Livelihood zone's 5-digit or 6-digit numerical code:
         input#lzCode(type='text' class='inputText' size=6)
         br
         label#lzAbbrev_label(for='lzAbbrev') Livelihood zone's 5-digit alphanumeric abbreviation:
         input#lzAbbrev(type='text' class='inputText' size=6)
         br
         input#confirm(type='submit' value='Confirm' hidden='true')
   section#fileUpload(for='fileUpload' hidden=false)
      form#fileUpload(class='fill' method='post' action='/uploads/upload')     
         label#labelChooseFile(for='buttonChooseFile') Browse for the folder or spreadsheet file:
         input#buttonChooseFile(type='file' name='myFiles' accept='.xlsx,.xls' multiple)
         br
         input#submit(type='submit' class='inputButton' value='Upload')
         br
